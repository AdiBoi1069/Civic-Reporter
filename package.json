{
  "name": "civic-reporter",
  "version": "1.0.0",
  "description": "Civic Reporter - monorepo (api, admin, mobile, shared)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace @civic/api run dev",
    "dev:admin": "npm --workspace @civic/admin run dev",
    "dev:mobile": "npm --workspace @civic/mobile start -- --non-interactive",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:admin\"",
    "build": "npm -w @civic/api run build && npm -w @civic/admin run build",
    "postinstall": "npm -w @civic/api run postinstall || echo done"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
